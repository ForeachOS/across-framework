<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
		xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

	<changeSet id="201406141716" author="arne" runAlways="true" dbms="oracle">
		<sql>
			ALTER session SET nls_length_semantics=CHAR;
		</sql>
	</changeSet>

	<changeSet id="201406141510B" author="arne">
		<preConditions onFail="MARK_RAN">
			<not>
				<tableExists tableName="ACROSS_SEQUENCES"/>
			</not>
		</preConditions>

		<comment>Creates Across sequences table</comment>

		<createTable tableName="ACROSS_SEQUENCES">
			<column name="seq_name" type="java.sql.Types.VARCHAR(50)">
				<constraints nullable="false" primaryKey="true" primaryKeyName="PK_ACROSS_SEQUENCES"/>
			</column>
			<column name="seq_number" type="java.sql.Types.BIGINT"/>
		</createTable>
	</changeSet>

</databaseChangeLog>