<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">
<head>
	<title>List application properties</title>
</head>
<body th:fragment="content">
<form id="context-selector-form" method="get">
	<select id="context-selector" name="contextName">
		<option th:each="context : ${contextList}" th:value="${context.name}" th:text="${context.name}"
		        th:selected="${context.name eq currentContext.name}">
			selected context
		</option>
	</select>
</form>

<div th:replace="th/across :: table (${applicationProperties})"></div>

<script type="text/javascript">
	/*<![CDATA[*/
	$( function() {
		   $('#context-selector' ).on( 'change', function() {
				$('#context-selector-form' ).submit();
		   } );
	   });
	/*]]>*/
</script>
</body>
</html>